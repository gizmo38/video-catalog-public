{
  "name": "video-catalog-electron",
  "version": "2.1.5",
  "description": "Application desktop pour générer un catalogue HTML de vidéos avec tableau élargi et actions multiples",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "electron",
    "video",
    "catalog",
    "html",
    "tableau-elargi",
    "vlc",
    "windows",
    "no-ffmpeg"
  ],
  "author": "Video Catalog Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "electron": "^38.1.2",
    "electron-builder": "^24.6.4",
    "electron-playwright-helpers": "^1.8.2",
    "playwright": "^1.55.1"
  },
  "build": {
    "appId": "com.videocatalog.app",
    "productName": "Video Catalog",
    "directories": {
      "output": "dist-portable"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!sessions/**/*",
      "!.serena/**/*",
      "!.claude/**/*",
      "!.vscode/**/*",
      "!backups/**/*",
      "!docs/**/*",
      "!test-*.spec.js",
      "!*.md",
      "README.md"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "asar": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
